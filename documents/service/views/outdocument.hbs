<html>
  <head>
    <meta charset='utf-8' />
    <title>Исходящий документ</title>
  </head>
  <body
    style='margin: 0; padding: 0; font-family:"Times New Roman", Times, serif'
  >
    <div class='document' style='position: relative;  font-family:serif;'>
      {{#if header_url}}
        <div class='company' style='width: 100%; margin-bottom:30px'>
          <img style='width: 100%;' src='{{header_url}}' />
        </div>
      {{/if}}
      {{#if withRegnumber}}
        <div class='reg-number' style='margin-bottom:30px'>
          <div class='number' style='font-size: 14px;'>{{regnumber}}
            {{date}}</div>
        </div>
      {{/if}}
      {{#each contractors}}
        <div
          class='contractor'
          style='text-align: right; margin-bottom: 10px; max-width: 50%; margin-right:0; margin-left:auto;'
        >
          {{#if this.contractor_director_staffName}}
            <div class='name'>{{this.contractor_director_staffName}}</div>
          {{/if}}
          {{#if this.contractor_name}}
            <div class='name'>{{this.contractor_name}}</div>
          {{/if}}
          {{#if this.contractor_director_fullName}}
            <div class='name'>{{this.contractor_director_fullName}}</div>
          {{/if}}
          <div class='address'>{{this.contractor_address}}</div>
          {{#if this.contractor_email}}
            <div class='address'>e-mail: {{this.contractor_email}}</div>
          {{/if}}
        </div>
      {{/each}}
      <div class='answer' style='margin-top: 30px;'>
        <div
          class='answer-header'
          style='text-align: left; font-size:16px; margin-bottom: 30px'
        >{{answer_header}}</div>
        <div class='answer-content'>{{{answer_content}}}</div>
      </div>
    </div>
  </body>
  <style>
    p{ margin: 0; } .sign:first-of-type{ margin-top: 0.5cm!important; }
  </style>
</html>